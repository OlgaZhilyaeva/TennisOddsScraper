<Window x:Class="TennisOddsScraper.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TennisOddsScraper.View"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="TennisScrapper" Height="285" Width="645"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label Target="{Binding ElementName=ComboBox}" Grid.Row="0" Margin="20,10,30,10" >Choose the type</Label>
            <ComboBox Name="ComboBox" StaysOpenOnEdit="True" IsEditable="True" SelectionChanged="ComboBox_Selected"  Width="347" Height="20" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
                <TextBlock>Home/Away</TextBlock>
                <TextBlock>Asian Handicap</TextBlock>
                <TextBlock>Over/Under</TextBlock>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal"  Grid.Row="1" Margin="0,10,0,10">
            <Button Width="130" Margin=" 25, 0, 40, 0">Get new information</Button>
            <Button Width="130" Margin=" 0, 0, 40, 0">Get from Data Base</Button>
            <Button Width="130">Create XML</Button>
        </StackPanel>

        <ProgressBar Margin="0, 10, 0, 10" Height="20" Grid.Row="2" ></ProgressBar>

        <DataGrid ColumnWidth="Auto" Grid.Row="4" x:Name="phonesGrid" AutoGenerateColumns="False" ItemsSource="{DynamicResource ResourceKey=OUItemModel}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Country" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Cup" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Match" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Av1" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Av2" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="AvPayout" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="H1" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="H2" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="HPayout" Width="*" ></DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <col:ArrayList x:Key="OUItemModel">
                    <local:OUItemModel Country="Country" Cup="Cup" Mutch="Mutch" Handicap="Handicap25" Av1="0.23" Av2="1.23" AvPayout="25" />
                </col:ArrayList>
            </DataGrid.Resources>
        </DataGrid>

    </Grid>
</Window>
